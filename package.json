{
  "name": "@claude/mcp-multilang-pro",
  "version": "1.0.0",
  "description": "Multi-language code execution MCP server with Docker isolation",
  "type": "module",
  "main": "./dist/mcp/server.js",
  "bin": {
    "mcp-multilang-pro": "./dist/mcp/server.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/mcp/server.js",
    "dev": "tsx watch src/mcp/server.ts",
    "test": "vitest",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test:pool": "node dist/test-container-pool.js",
    "test:cache": "node dist/test-package-cache-simple.js",
    "test:sessions": "node dist/test-session-manager.js",
    "test:runtimes": "node dist/test-all-runtimes.js",
    "test:mcp": "node dist/test-mcp-tools.js",
    "test:all": "npm run test:runtimes && npm run test:mcp"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "docker",
    "sandbox",
    "multi-language",
    "code-execution"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dockerode": "^4.0.2",
    "tar-stream": "^3.1.7",
    "uuid": "^11.0.3",
    "pino": "^9.5.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.31",
    "@types/node": "^22.10.2",
    "@types/tar-stream": "^3.1.3",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
